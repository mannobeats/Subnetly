# Host port exposed by Docker Compose (change this only if needed)
APP_PORT="3000"

# PostgreSQL connection used by the app container
DATABASE_URL="postgresql://subnetly:subnetly@db:5432/subnetly?schema=public"

# Better Auth
BETTER_AUTH_SECRET="replace-with-a-long-random-secret"
# Optional explicit public URL (recommended when you know it; e.g. tunnel/domain URL)
# Leave empty to auto-detect from request/proxy headers.
BETTER_AUTH_URL=""
# Optional comma-separated extra allowed origins for auth callbacks/sign-in
# Example: "https://subnetly.ayibolab.com,https://subnetly.internal.example"
BETTER_AUTH_TRUSTED_ORIGINS=""

# Optional: protect first-run owner setup with a one-time token
INITIAL_SETUP_TOKEN=""

# Optional: allow self-signed certificates for service health checks
HEALTHCHECK_ALLOW_SELF_SIGNED="false"
