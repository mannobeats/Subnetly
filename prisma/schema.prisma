
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ─── ORGANIZATION ────────────────────────────────────────────

model Site {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?
  address     String?
  latitude    Float?
  longitude   Float?
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  racks        Rack[]
  devices      Device[]
  subnets      Subnet[]
  vlans        VLAN[]
  services     Service[]
  changeLogs   ChangeLog[]
  categories   CustomCategory[]
  wifiNetworks WifiNetwork[]
  settings     SiteSettings?
  subnetTemplates SubnetTemplate[]
  rangeSchemes    IPRangeScheme[]

  @@index([userId])
}

model CustomCategory {
  id        String   @id @default(cuid())
  type      String   @default("device")
  name      String
  slug      String
  icon      String   @default("server")
  color     String   @default("#5e6670")
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([siteId, type, slug])
  @@index([siteId])
}

model Rack {
  id          String   @id @default(cuid())
  name        String
  siteId      String
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  units       Int      @default(42)
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  devices Device[]
}

// ─── DCIM (Devices & Cabling) ────────────────────────────────

model Manufacturer {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  deviceTypes DeviceType[]
}

model DeviceType {
  id             String       @id @default(cuid())
  manufacturerId String
  manufacturer   Manufacturer @relation(fields: [manufacturerId], references: [id], onDelete: Cascade)
  model          String
  slug           String       @unique
  partNumber     String?
  uHeight        Int          @default(1)
  isFullDepth    Boolean      @default(true)
  description    String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  devices Device[]
}

model Device {
  id           String      @id @default(cuid())
  name         String
  macAddress   String
  ipAddress    String
  category     String
  status       String      @default("active")
  serial       String?
  assetTag     String?
  notes        String?
  siteId       String?
  site         Site?       @relation(fields: [siteId], references: [id], onDelete: SetNull)
  rackId       String?
  rack         Rack?       @relation(fields: [rackId], references: [id], onDelete: SetNull)
  rackPosition Int?
  deviceTypeId String?
  deviceType   DeviceType? @relation(fields: [deviceTypeId], references: [id], onDelete: SetNull)
  platform     String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  interfaces Interface[]
  services   Service[]
}

model Interface {
  id          String  @id @default(cuid())
  name        String
  deviceId    String
  device      Device  @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  type        String  @default("1000base-t")
  speed       Int?
  macAddress  String?
  enabled     Boolean @default(true)
  mtu         Int     @default(1500)
  description String?
  mode        String?
  ipAddressId String?

  cableA Cable[] @relation("CableEndA")
  cableB Cable[] @relation("CableEndB")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cable {
  id           String    @id @default(cuid())
  interfaceAId String
  interfaceA   Interface @relation("CableEndA", fields: [interfaceAId], references: [id], onDelete: Cascade)
  interfaceBId String
  interfaceB   Interface @relation("CableEndB", fields: [interfaceBId], references: [id], onDelete: Cascade)
  type         String    @default("cat6")
  color        String?
  length       Float?
  lengthUnit   String    @default("m")
  label        String?
  status       String    @default("connected")
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

// ─── IPAM ────────────────────────────────────────────────────

model Subnet {
  id          String   @id @default(cuid())
  prefix      String
  mask        Int
  description String?
  siteId      String?
  site        Site?    @relation(fields: [siteId], references: [id], onDelete: SetNull)
  vlanId      String?
  vlan        VLAN?    @relation(fields: [vlanId], references: [id], onDelete: SetNull)
  gateway     String?
  status      String   @default("active")
  role        String?
  isPool      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  ipAddresses  IPAddress[]
  ipRanges     IPRange[]
  wifiNetworks WifiNetwork[]
}

model IPAddress {
  id          String   @id @default(cuid())
  address     String
  mask        Int      @default(24)
  subnetId    String?
  subnet      Subnet?  @relation(fields: [subnetId], references: [id], onDelete: SetNull)
  status      String   @default("active")
  dnsName     String?
  description String?
  assignedTo  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model IPRange {
  id          String   @id @default(cuid())
  startAddr   String
  endAddr     String
  subnetId    String
  subnet      Subnet   @relation(fields: [subnetId], references: [id], onDelete: Cascade)
  schemeEntryId String?
  schemeEntry   IPRangeSchemeEntry? @relation(fields: [schemeEntryId], references: [id], onDelete: SetNull)
  role        String   @default("general")
  description String?
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SubnetTemplate {
  id          String   @id @default(cuid())
  name        String
  slug        String
  prefix      String
  mask        Int
  gateway     String?
  role        String?
  description String?
  siteId      String
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([siteId, slug])
  @@index([siteId])
}

model IPRangeScheme {
  id          String   @id @default(cuid())
  name        String
  slug        String
  description String?
  siteId      String
  site        Site     @relation(fields: [siteId], references: [id], onDelete: Cascade)
  entries     IPRangeSchemeEntry[]
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([siteId, slug])
  @@index([siteId])
}

model IPRangeSchemeEntry {
  id          String   @id @default(cuid())
  schemeId    String
  scheme      IPRangeScheme @relation(fields: [schemeId], references: [id], onDelete: Cascade)
  startOctet  Int
  endOctet    Int
  role        String   @default("general")
  description String?
  sortOrder   Int      @default(0)
  ranges      IPRange[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([schemeId])
}

model VLAN {
  id          String   @id @default(cuid())
  vid         Int
  name        String
  siteId      String?
  site        Site?    @relation(fields: [siteId], references: [id], onDelete: SetNull)
  status      String   @default("active")
  role        String?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  subnets      Subnet[]
  wifiNetworks WifiNetwork[]
}

// ─── WIRELESS ────────────────────────────────────────────────

model WifiNetwork {
  id              String   @id @default(cuid())
  ssid            String
  security        String   @default("wpa2-personal") // wpa2-personal, wpa3-personal, wpa2-enterprise, wpa3-enterprise, open
  passphrase      String?
  band            String   @default("both")          // 2.4ghz, 5ghz, 6ghz, both
  hidden          Boolean  @default(false)
  enabled         Boolean  @default(true)
  vlanId          String?
  vlan            VLAN?    @relation(fields: [vlanId], references: [id], onDelete: SetNull)
  subnetId        String?
  subnet          Subnet?  @relation(fields: [subnetId], references: [id], onDelete: SetNull)
  siteId          String?
  site            Site?    @relation(fields: [siteId], references: [id], onDelete: SetNull)
  guestNetwork    Boolean  @default(false)
  clientIsolation Boolean  @default(false)
  bandSteering    Boolean  @default(true)
  pmf             String   @default("optional")      // disabled, optional, required
  txPower         String   @default("auto")           // auto, high, medium, low
  minRate         Int?                                 // minimum data rate in Mbps
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// ─── SERVICES ────────────────────────────────────────────────

model Service {
  id            String   @id @default(cuid())
  name          String
  deviceId      String
  device        Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  protocol      String   @default("tcp")
  ports         String
  description   String?
  siteId        String?
  site          Site?    @relation(fields: [siteId], references: [id], onDelete: SetNull)
  // Enhanced fields
  url           String?                          // Access URL (e.g. https://proxmox.local:8006)
  environment   String   @default("production")  // production, staging, development, testing
  isDocker      Boolean  @default(false)          // Running in Docker container?
  dockerImage   String?                           // e.g. nginx:latest, portainer/portainer-ce
  dockerCompose Boolean  @default(false)          // Part of docker-compose stack?
  stackName     String?                           // Docker stack / compose project name
  healthStatus  String   @default("unknown")      // healthy, degraded, down, unknown
  version       String?                           // Service version (e.g. 2.19.0)
  dependencies  String?                           // Comma-separated service names this depends on
  tags          String?                           // Comma-separated tags for grouping
  // Health check fields
  healthCheckEnabled Boolean  @default(false)     // Auto health check enabled for this service?
  lastCheckedAt      DateTime?                    // Last time health was checked
  lastResponseTime   Int?                         // Last response time in ms
  uptimePercent      Float?                       // Uptime percentage (0-100)
  checkCount         Int      @default(0)         // Total checks performed
  successCount       Int      @default(0)         // Total successful checks
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// ─── SITE SETTINGS ──────────────────────────────────────────

model SiteSettings {
  id                    String  @id @default(cuid())
  siteId                String  @unique
  site                  Site    @relation(fields: [siteId], references: [id], onDelete: Cascade)
  healthCheckEnabled    Boolean @default(false)    // Global toggle for auto health checks
  healthCheckInterval   Int     @default(300)      // Interval in seconds (default 5 min)
  healthCheckTimeout    Int     @default(10)       // Timeout per request in seconds
}

// ─── AUDIT ───────────────────────────────────────────────────

model ChangeLog {
  id         String   @id @default(cuid())
  objectType String
  objectId   String
  action     String
  changes    String?
  siteId     String?
  site       Site?    @relation(fields: [siteId], references: [id], onDelete: SetNull)
  timestamp  DateTime @default(now())
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean   @default(false)
  image         String?
  activeSiteId  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}
